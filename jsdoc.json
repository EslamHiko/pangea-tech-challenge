{
    "source": {
        "includePattern": ".+\\.js(doc)?|vue|ts$",
        "include": ["."],
        "exclude": ["node_modules"]
    },
    "tags": {
      "allowUnknownTags": ["optional"]
    },
    "plugins": [
      "node_modules/better-docs/typescript",
      "node_modules/jsdoc-vuejs"
    ],
    "opts": {
        "destination": "./docs/",
        "template": "node_modules/better-docs",
        "recurse": true
    }
}
